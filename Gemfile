source "https://rubygems.org"

gem "jekyll", "~> 4.3"
gem "webrick", "~> 1.7"

group :jekyll_plugins do
  # SEO Plugins
  gem "jekyll-seo-tag"      # Meta tags automáticos para SEO
  gem "jekyll-sitemap"      # Genera sitemap.xml automáticamente
  gem "jekyll-feed"         # Genera RSS feed
  
  # Otros plugins útiles
  gem "jekyll-redirect-from" # Redirecciones
  gem "jekyll-compose"       # Comandos para crear posts fácilmente
end